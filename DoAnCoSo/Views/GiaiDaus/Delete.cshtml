@model DoAnCoSo.ViewModel.GiaiDauDetails

@{
    ViewData["Title"] = "Xóa Giải Đấu";
}

<h1 style="text-align: center; font-weight: bold;">Xóa Giải Đấu</h1>

<h3 style=" font-weight: bold;">Bạn Có Chắc Muốn Xóa Giải Đấu Này?</h3>
<div>
    <h4>Giải Đấu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.giaiDau.TenGiaiDau)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.giaiDau.TenGiaiDau)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.loaiGiaiDau.TenLoai)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.loaiGiaiDau.TenLoai)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.giaiDau.NgayBatDau)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.giaiDau.NgayBatDau)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.giaiDau.NgayKetThuc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.giaiDau.NgayKetThuc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.giaiDau.NoiDung)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.giaiDau.NoiDung)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.giaiDau.TrangThai)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.giaiDau.TrangThai)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="giaiDau.IdgiaiDau" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <br /><br />
        <a class="btn btn-success btn-sm" asp-action="Index">Quay Về Danh Sách Giải Đấu</a>
    </form>
</div>
