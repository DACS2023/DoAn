@model IEnumerable<DoAnCoSo.Areas.Identity.Data.LoaiGiaiDau>

@{
    ViewData["Title"] = "Danh Sách Loại Giải";
}

<h2 style ="text-align: center; font-weight: bold;">Danh Sách Loại Giải</h2>

<p>
    <a asp-action="Create">Thêm Loại Giải</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdloaiGiaiDau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TenLoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.IdloaiGiaiDau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.IdloaiGiaiDau">Chỉnh Sửa</a> 
                <a class="btn btn-success btn-sm" asp-action="Details" asp-route-id="@item.IdloaiGiaiDau">Thông Tin Chi Tiết</a> 
                <a class="btn btn-success btn-sm" asp-action="Delete" asp-route-id="@item.IdloaiGiaiDau">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
